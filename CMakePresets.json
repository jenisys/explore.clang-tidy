          "type": "configure"
        },
        {
          "name": "debug",
          "type": "build"
        }
      ]
    },
    {
      "name": "debug",
      "steps": [
        {
          "name": "debug",
          "type": "configure"
        },
        {
          "name": "debug",
          "type": "build"
        }
      ]
    },
    {
      "name": "release",
      "steps": [
        {
          "name": "release",
          "type": "configure"
        },
        {
          "name": "release",
          "type": "build"
        }
      ]
    }
  ]
